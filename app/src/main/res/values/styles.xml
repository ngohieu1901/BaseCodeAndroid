<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Default_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background_app</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Theme.ASA120_Metal_Detector" parent="Base.Default_Theme">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#5A5A5A</item>
        <item name="colorControlActivated">#FFF732</item>
    </style>

    <style name="TextHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="radius8dp">
        <item name="cornerSize">8dp</item>
    </style>
</resources>